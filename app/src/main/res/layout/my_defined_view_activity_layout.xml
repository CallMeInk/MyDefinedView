<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/my_text_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_text_view"/>

    <Button
        android:id="@+id/my_top_bar_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_top_bar_view"/>

    <Button
        android:id="@+id/my_circle_rating_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_circle_rating_view"/>

    <Button
        android:id="@+id/my_media_rect_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_media_rect_view"/>

    <Button
        android:id="@+id/my_simple_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_simple_view"/>

    <Button
        android:id="@+id/my_auto_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="my_auto_layout"/>

</LinearLayout>
