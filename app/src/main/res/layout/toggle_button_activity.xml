<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00ff00">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        android:button="@drawable/hilton"/>

    <Switch
        android:id="@+id/switch_view_1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:showText="true"
        android:textOn="弹"
        android:textOff="弹"
        android:switchTextAppearance="@style/switchTheme"
        android:thumb="@drawable/switch_custom_thumb_on"
        android:track="@drawable/switch_custom_track_selector"
        android:switchMinWidth="5dp"/>

    <FrameLayout
        android:id="@+id/switch_root"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">
        <Switch
            android:id="@+id/switch_view_2"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:showText="true"
            android:textOn="弹"
            android:textOff="弹"
            android:switchTextAppearance="@style/switchTheme"
            android:thumb="@drawable/switch_custom_thumb_on_1"
            android:track="@drawable/switch_custom_track_selector_1"/>
    </FrameLayout>


</LinearLayout>